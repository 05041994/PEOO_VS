        xmlns:local="clr-namespace:retagulo_app"
        mc:Ignorable="d"
        Title="Retângulo" Height="248" Width="338">
    <Grid>
        <GroupBox Header="Área e Diagonal">
            <Grid>
                <TextBlock HorizontalAlignment="Left" Margin="33,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="18" Width="52"><Run Language="pt-br" Text="Base"/></TextBlock>
                <TextBlock HorizontalAlignment="Left" Margin="230,12,0,0" TextWrapping="Wrap" VerticalAlignment="Top" RenderTransformOrigin="0.71,0.6"><Run Language="pt-br" Text="Altura"/><LineBreak/><Run Language="pt-br"/></TextBlock>
